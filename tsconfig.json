{
    "compilerOptions": {
        "preserveConstEnums": true,
        "removeComments": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "target": "es2017",
        "lib": [
            "esnext"
        ],
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "strict": true,
        "outDir": "./build",
    },
    "include": ["./src/**/*"],
}